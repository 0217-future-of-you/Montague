
.nj_card{
	width: 750rpx;
	height: 160rpx;
	background-color: white;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 10rpx;
}
.nj_image{
	width: 160rpx;
	height: 160rpx;
}
.nj_image>image{
	width: 160rpx;
	height: 160rpx;
}
.nj_right{
	width: 400rpx;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding: 10rpx;
	margin-left: 20rpx;
}
.nj_right>view{
	margin-top: 20rpx;
}
.nj_right>view:first-child{
	  white-space: nowrap;
	    overflow: hidden;
	    text-overflow: ellipsis;
	font-size: 32rpx;
	font-weight: bold;
	color: #8C9DA7;
}
.nj_right>view:last-child{
	  white-space: nowrap;
	    overflow: hidden;
	    text-overflow: ellipsis;
	margin-top: 20rpx;
	font-size: 26;
	
	color: #8C9DA7;
}
.datas{
	white-space: nowrap;
	  overflow: hidden;
	  text-overflow: ellipsis;
    margin-left: 100rpx;
	margin-right: 20rpx;
	line-height: 160rpx;
	
	font-size: 24rpx;
	color:#8C9DA7 ;
}



